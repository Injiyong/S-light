<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#404040"
    android:gravity="center"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:background="@drawable/btncolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:text="SETTINGS"
            android:textColor="#f2c50a"
            android:gravity="center"
            android:textSize="40dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#d3d3d3"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="joy"
            android:gravity="center"
            android:textSize="15sp"/>

        <RadioGroup
            android:id="@+id/rgJoy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbJoy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.2"
                android:onClick="OnClickHandlerPurple"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapepurple"
                android:layout_weight="0.15"/>

            <RadioButton
                android:id="@+id/rbJoy2"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:onClick="OnClickHandlerBlue"/>
            <ImageView
                android:layout_width="30dp"
                android:background="@drawable/shapeblue"
                android:layout_height="30dp"
                android:layout_weight="0.15"/>

            <RadioButton
                android:id="@+id/rbJoy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>
            <ImageView
                android:id="@+id/imageView"
                android:background="@drawable/shape"
                android:layout_width="18dp"
                android:layout_height="30dp"
                android:layout_weight="0.15"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#d3d3d3"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="sadness"
            android:gravity="center"
            android:textSize="15sp"/>

        <RadioGroup
            android:id="@+id/rgSad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbSad1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="OnClickHandlerPink"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapepink"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbSad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnClickHandlerOrange"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapeorange"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbSad3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="18dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/shape" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#d3d3d3"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="anger"
            android:gravity="center"
            android:textSize="15sp"/>

        <RadioGroup
            android:id="@+id/rgAnger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbAnger1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="OnClickHandlerGreen"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapegreen"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbAnger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnClickHandlerBlue"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapeblue"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbAnger3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView3"
                android:background="@drawable/shape"
                android:layout_width="18dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#d3d3d3"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="fear"
            android:gravity="center"
            android:textSize="15sp"/>

        <RadioGroup
            android:id="@+id/rgFear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbFear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="OnClickHandlerOrange"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapeorange"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbFear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnClickHandlerGreen"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapegreen"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbFear3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="18dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/shape" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#d3d3d3"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="disgust"
            android:gravity="center"
            android:textSize="15sp"/>

        <RadioGroup
            android:id="@+id/rgDisgust"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbDisgust1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="OnClickHandlerBlue"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapeblue"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbDisgust2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnClickHandlerPurple"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapepurple"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rbDisgust3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageView5"
                android:background="@drawable/shape"
                android:layout_width="18dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#d3d3d3"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="restless"
            android:gravity="center"
            android:textSize="15sp"/>

        <RadioGroup
            android:id="@+id/rgRestless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbRestless1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:onClick="OnClickHandlerYellow"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapeyellow"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbRestless2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnClickHandlerOrange"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shapeorange"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/rbRestless3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageView6"
                android:background="@drawable/shape"
                android:layout_width="18dp"
                android:layout_height="30dp"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>
        <Button
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="완료"/>
    </LinearLayout>

</LinearLayout>